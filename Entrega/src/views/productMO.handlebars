    <script>
        const socket = io();

        socket.emit('requestProducts');

        socket.on('productsUpdated', (products) => {
            const productList = document.getElementById('productList');
            if (!productList) return;

            productList.innerHTML = '';

            if (products.length === 0) {
                productList.innerHTML = `
                    <p class="text-center text-gray-600 col-span-3 py-8">No hay productos disponibles</p>
                `;
                return;
            }

            products.forEach(product => {
                const li = document.createElement('li');
                li.className = "product-card bg-gray-100 shadow-md rounded-lg p-6";
                li.setAttribute('data-id', product.id);
                li.innerHTML = `
                    <div class="h-40 bg-gray-200 rounded-lg mb-4 flex items-center justify-center">
                        <span class="text-gray-500">Imagen de ${product.title}</span>
                    </div>
                    <h2 class="text-xl font-semibold text-black">${product.title}</h2>
                    <p class="text-gray-600 mt-2">Precio: $${product.price}</p>
                    <p class="text-gray-700 mt-3">${product.description}</p>
                    <div class="mt-4 flex justify-between">
                        <button class="bg-transparent border border-black text-black hover:bg-black hover:text-white font-medium py-2 px-4 rounded transition-colors">
                            Añadir al carrito
                        </button>
                        <button class="text-gray-500 hover:text-black">
                            <i class="fas fa-heart text-xl"></i>
                        </button>
                    </div>
                `;
                productList.appendChild(li);
            });
        });
    </script>